% alterando a capa
\renewcommand{\imprimircapa}{
  \begin{capa}
    \center
    \ABNTEXchapterfont\Large\textsc{\imprimirinstituicao}

    \vspace*{1cm}

    {\ABNTEXchapterfont\large\textsc{\imprimirautor}}

    \vfill
    \begin{center}
    \ABNTEXchapterfont\LARGE\textsc{\imprimirtitulo}
    \end{center}
    \vfill

    \large\textsc{\imprimirlocal}

    \large\textsc{\imprimirdata}

    \vspace*{1cm}
  \end{capa}
}


