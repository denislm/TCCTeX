% alterando a capa
\renewcommand{\imprimircapa}{
  \begin{capa}
    \center
    \vspace{0.5cm}
    \ABNTEXchapterfont\large\textsc{\MakeUppercase {\imprimirinstituicao}}

    \vspace*{\fill}
    

    {\ABNTEXchapterfont\large\textsc{\MakeUppercase {\imprimirautor}}}

    \vfill
    \begin{center}
    \ABNTEXchapterfont\LARGE\textsc{\MakeUppercase {\imprimirtitulo}}
    \end{center}
    \vfill

    \large\textsc{\MakeUppercase{\imprimirlocal}}

    \large\textsc{\MakeUppercase {\imprimirdata}}

  \end{capa}
}


% folha de rosto 

\makeatletter

\renewcommand{\folhaderostocontent}{
\begin{center}

    \vspace{0.5cm}

{\ABNTEXchapterfont\large\MakeUppercase {\imprimirautor}}

\vspace*{\fill}

